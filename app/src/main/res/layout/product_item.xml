<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:importantForAccessibility="yes"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:importantForAccessibility="yes"
        android:focusable="false"
        android:background="?attr/colorPrimary">

        <ImageView
            android:id="@+id/Product_imageView_product"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:padding="1dp"
            android:layout_margin="4dp"
            android:importantForAccessibility="yes"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:contentDescription="@string/product_image_description" />

        <TextView
            android:id="@+id/Product_TextView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textSize="18sp"
            android:textColor="?attr/colorOnPrimary"
            android:importantForAccessibility="yes"
            android:clickable="false"
            android:focusable="false"
            android:text="TextView" />


        <TextView
            android:id="@+id/Product_TextView_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="0dp"
            android:textSize="14sp"
            android:gravity="end"
            android:textColor="?attr/colorOnPrimary"
            android:textStyle="bold"
            android:importantForAccessibility="yes"
            android:clickable="false"
            android:focusable="false"
            android:text="TextView" />

        <Button
            android:id="@+id/Product_Button_product"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_button"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="none"
            android:importantForAccessibility="yes"
            android:focusable="true"
            android:contentDescription="@string/button_product"
            android:text="@string/button_product" />

    </LinearLayout>

</androidx.cardview.widget.CardView>