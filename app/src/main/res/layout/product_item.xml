<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:importantForAccessibility="yes"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#02838C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:importantForAccessibility="yes">

        <ImageView
            android:id="@+id/Product_imageView_product"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:padding="2dp"
            android:layout_margin="6dp"
            android:importantForAccessibility="yes"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:contentDescription="@string/product_image_description" />

        <TextView
            android:id="@+id/Product_TextView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:importantForAccessibility="yes"
            android:clickable="false"
            android:focusable="false"
            android:text="TextView" />

        <TextView
            android:id="@+id/Product_TextView_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="2dp"
            android:textSize="11sp"
            android:textColor="#E0E0E0"
            android:maxLines="1"
            android:ellipsize="end"
            android:importantForAccessibility="yes"
            android:clickable="false"
            android:focusable="false"
            android:text="TextView" />

        <TextView
            android:id="@+id/Product_TextView_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:textSize="16sp"
            android:gravity="end"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:importantForAccessibility="yes"
            android:clickable="false"
            android:focusable="false"
            android:text="TextView" />

        <Button
            android:id="@+id/Product_Button_product"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:importantForAccessibility="yes"
            android:focusable="true"
            android:text="@string/button_product" />

    </LinearLayout>

</androidx.cardview.widget.CardView>